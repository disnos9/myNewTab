{
  "name": "My New Tab",
  "version": "1.3",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "mynewtab"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
