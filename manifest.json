{
  "name": "My New Tab",
  "version": "1.1",
  "manifest_version": 3,
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "mynewtab"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches":["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
      "scripts": ["background.js"]
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
